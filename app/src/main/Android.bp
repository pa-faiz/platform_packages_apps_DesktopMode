package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_app {
    name: "DesktopMode",
    resource_dirs: ["res"],
    platform_apis: true,
    defaults: [
        "SettingsLibDefaults",
    ],
    srcs: [
        "java/**/*.java",
    ],
    system_ext_specific: true,
    certificate: "platform",
    privileged: true,
    static_libs: [
        "androidx.appcompat_appcompat",
        "androidx.preference_preference",
        "com.google.android.material_material",
        "VncFlinger_aidl-java",
    ],
    required: [
                "privapp_whitelist_com.libremobileos.desktopmode.xml",
                "default-permissions_com.libremobileos.desktopmode",
    ],
}

prebuilt_etc {
    name: "privapp_whitelist_com.libremobileos.desktopmode.xml",

    system_ext_specific: true,
    src: "privapp_whitelist_com.libremobileos.desktopmode.xml",
    sub_dir: "permissions",
}

prebuilt_etc {
    name: "default-permissions_com.libremobileos.desktopmode",
    system_ext_specific: true,
    sub_dir: "default-permissions",
    src: "default-permissions_com.libremobileos.desktopmode.xml",
    filename_from_src: true,
}
